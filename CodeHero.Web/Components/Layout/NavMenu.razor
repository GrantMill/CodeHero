@rendermode InteractiveServer
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <a class="navbar-brand" href="">CodeHero</a>
        <button class="btn btn-sm btn-outline-light" @onclick="ToggleTheme" title="Toggle light/dark" type="button">
            <span class="bi @(currentTheme=="dark"?"bi-moon":"bi-brightness-high")"></span>
        </button>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="requirements">
                <span class="bi bi-journal-text" aria-hidden="true"></span> Requirements
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="architecture">
                <span class="bi bi-diagram-3" aria-hidden="true"></span> Architecture
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="features">
                <span class="bi bi-sliders" aria-hidden="true"></span> Features
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="plan">
                <span class="bi bi-kanban" aria-hidden="true"></span> Backlog
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="agents">
                <span class="bi bi-robot" aria-hidden="true"></span> Agents
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="agents/chat">
                <span class="bi bi-chat-dots" aria-hidden="true"></span> Scribe Chat
            </NavLink>
        </div>
    </nav>
</div>

@code {
    [Inject] private IJSRuntime JS { get; set; } = default!;
    private string currentTheme = "light";
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try { currentTheme = await JS.InvokeAsync<string>("codeheroTheme_get"); StateHasChanged(); } catch { }
        }
    }
    private async Task ToggleTheme()
    {
        try { await JS.InvokeVoidAsync("codeheroTheme_toggle"); currentTheme = await JS.InvokeAsync<string>("codeheroTheme_get"); StateHasChanged(); }
        catch { await JS.InvokeVoidAsync("eval", "(function(){var e=document.documentElement.getAttribute('data-bs-theme')==='dark'?'light':'dark';document.documentElement.setAttribute('data-bs-theme',e);try{localStorage.setItem('theme',e);}catch{}})()"); }
    }
}
